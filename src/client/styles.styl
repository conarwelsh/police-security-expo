@import 's-grid-settings'
// you can overwrite settings here
@import 's-grid-functions'
@import 's-grid-classes'

html, body, #root 
  margin 0
  padding 0
  position relative
  width 100%
  height 100%
  font-family 'Open Sans', sans-serif
  font-weight 300

* 
  box-sizing border-box

img 
  max-width 100%

a 
  text-decoration none
  color #1a4ca0

p 
  font-family 'Open Sans', sans-serif
  font-weight 300
  margin-bottom 1em

  &.lead
    font-size 1.5em
    
h1 
  font-size 45px
  line-height 45px
  font-weight 300
  font-family Lato, sans-serif
  color #4b4e53
  text-transform uppercase
  margin 0 0 15px 0

  small 
    font-size 16px
    font-family 'Open Sans', sans-serif
    font-weight 300
    line-height 16px
    text-transform lowercase
    margin 0
    padding 0

  strong 
    font-weight 700

.hidden-mobile 
  @media only screen and (max-width  480px) 
    display none !important



